<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp"
    android:layout_height="50dp" android:padding="2dp">

    <ImageView android:id="@+id/map_icon_image" android:layout_width="50dp"
        android:layout_height="50dp" android:src="@drawable/g_1" />

    <TextView android:id="@+id/map_icon_text" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:layout_marginBottom="4dp" android:gravity="center"
        android:paddingLeft="2dp"
        android:textStyle="bold"
        android:paddingRight="2dp"
        android:textColor="@color/colorPrimary" android:textSize="10sp" />

</FrameLayout>