<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/person_icon" android:layout_width="60dp"
        android:layout_height="60dp" android:layout_marginLeft="16dp" android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp" android:src="@drawable/placeholder"
        app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintTop_toTopOf="parent" />

    <TextView android:id="@+id/map_info_name" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp" android:text="name" android:textColor="#FF01A295"
        android:textSize="14sp" app:layout_constraintLeft_toRightOf="@+id/person_icon"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView android:id="@+id/map_info_date" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp" android:text="date" android:textColor="#FF818181"
        android:textSize="10sp" app:layout_constraintLeft_toRightOf="@+id/person_icon"
        app:layout_constraintTop_toBottomOf="@+id/map_info_name" />
    <TextView android:id="@+id/check_in_time" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginLeft="8dp"
        android:text="Checkin time " android:textColor="#FF019A8E" android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/person_icon"
        app:layout_constraintTop_toBottomOf="@+id/map_info_date" />
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/history_details"
        android:layout_marginTop="8dp" android:background="#FF019A8E" android:gravity="center"
        android:padding="8dp" android:text="History details" android:textColor="#FFFFFFFF"
        android:textSize="14sp" app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>